<Page x:Class="PetFarm.Pages.EditPetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetFarm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Редактирование питомца">

    <Page.Background>
        <ImageBrush ImageSource="/2pic.jpg"/>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Редактирование питомца" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="Black"
                   HorizontalAlignment="Center" 
                   FontFamily="Cascadia Mono" 
                   Margin="0,20,0,20"/>

       
        <Grid Grid.Row="1" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Вид питомца -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Вид питомца:" 
                           FontFamily="Cascadia Mono"
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#FF333333"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TypeTextBox" 
                         Height="40"
                         FontSize="16"
                         Padding="12,8"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFBDBDBD"
                         BorderThickness="1"/>
            </StackPanel>

            <!-- Кличка -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Кличка:" 
                           FontFamily="Cascadia Mono"
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#FF333333"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" 
                         Height="40"
                         FontSize="16"
                         Padding="12,8"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFBDBDBD"
                         BorderThickness="1"/>
            </StackPanel>

            <!-- Возраст -->
            <StackPanel Grid.Column="4">
                <TextBlock Text="Возраст:" 
                           FontFamily="Cascadia Mono"
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#FF333333"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="AgeTextBox" 
                         Height="40"
                         FontSize="16"
                         Padding="12,8"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFBDBDBD"
                         BorderThickness="1"/>
            </StackPanel>
        </Grid>

        <!-- Вакцинации и визиты -->
        <Grid Grid.Row="2" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Вакцинации -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Вакцинации:" 
                           FontFamily="Cascadia Mono"
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#FF333333"
                           Margin="0,0,0,5"/>
                <Border Background="White" 
                        BorderBrush="#FFBDBDBD" 
                        BorderThickness="1"
                        Height="120">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="VaccinationsPanel" MinHeight="80"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- Визиты к ветеринару -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Визиты к ветеринару:" 
                           FontFamily="Cascadia Mono"
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#FF333333"
                           Margin="0,0,0,5"/>
                <Border Background="White" 
                        BorderBrush="#FFBDBDBD" 
                        BorderThickness="1"
                        Height="120">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="VetVisitsPanel" MinHeight="80"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </Grid>

        
        <Grid Grid.Row="3"/>

        <!-- Кнопки  -->
        <Border Grid.Row="4" 
                Padding="20" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="0,1,0,0"
                Background="#F0F8FFFF"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" 
                        Grid.Column="1"
                        Content="Назад" 
                        Height="45"
                        Margin="0,0,10,0"
                        FontSize="16"
                        FontFamily="Cascadia Mono"
                        FontWeight="SemiBold"
                        Background="#FF9E9E9E"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BackButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF9E9E9E"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF757575"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="SaveButton" 
                        Grid.Column="2"
                        Content="Сохранить" 
                        Height="45"
                        Margin="10,0,0,0"
                        FontSize="16"
                        FontFamily="Cascadia Mono"
                        FontWeight="SemiBold"
                        Background="#FF53A1D9"
                        Foreground="White"
                        BorderThickness="0"
                        Click="SaveButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4CAF50"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>