<Page x:Class="PetFarm.Pages.MyPetsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="659.2" d:DesignWidth="891.2"
      Title="Мои питомцы">

    <Page.Background>
        <ImageBrush ImageSource="/2pic.jpg"/>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

    
        <Border Grid.Row="0" Padding="20">
            <TextBlock Text="Мои питомцы" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="Black"
                       HorizontalAlignment="Center" FontFamily="Cascadia Mono" Margin="0,-6,0,6"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <ItemsControl x:Name="PetsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FF354148" BorderThickness="2" Margin="0,0,0,10" Background="#FFABDAF4" CornerRadius="10" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                               
                                <Button Grid.Column="0" Background="Transparent" BorderThickness="0" Click="PetButton_Click" Tag="{Binding}">
                                    <StackPanel>
                                        <!-- Кличка-->
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="20" 
                                                   FontWeight="Bold" 
                                                   FontFamily="Cascadia Mono"
                                                   Margin="0,0,0,8"/>

                                        <!-- Вид -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="вид: " 
                                                       FontSize="14" 
                                                       FontFamily="Cascadia Mono"
                                                       Foreground="#FF333333"/>
                                            <TextBlock Text="{Binding Type}" 
                                                       FontSize="14" 
                                                       FontFamily="Cascadia Mono"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FF333333"/>
                                        </StackPanel>

                                        <!-- Возраст -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="возраст: " 
                                                       FontSize="14" 
                                                       FontFamily="Cascadia Mono"
                                                       Foreground="#FF333333"/>
                                            <TextBlock Text="{Binding Age}" 
                                                       FontSize="14" 
                                                       FontFamily="Cascadia Mono"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FF333333"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>

                                <!-- Кнопка медицинских данных -->
                                <Button Grid.Column="1" 
                                        Content="Мед. данные" 
                                        Width="100"
                                        Height="30"
                                        FontSize="11"
                                        Margin="10,0,5,0"
                                        Click="MedicalDataButton_Click"
                                        Tag="{Binding}"
                                        Background="#FF53A1D9"
                                        Foreground="White"
                                        FontFamily="Cascadia Mono"
                                        BorderThickness="0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#FF53A1D9"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="5"
                                                                BorderThickness="0">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF357ABD"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Кнопка удаления -->
                                <Button Grid.Column="2" 
                                        Content="✕" 
                                        Width="30"
                                        Height="30"
                                        FontSize="14"
                                        Click="DeletePetButton_Click"
                                        Tag="{Binding}"
                                        Background="#FFEF5350"
                                        Foreground="White"
                                        FontFamily="Cascadia Mono"
                                        BorderThickness="0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#FFEF5350"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="15"
                                                                BorderThickness="0">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFD32F2F"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопка Назад -->
        <Border Grid.Row="2"  Padding="20" BorderBrush="#FFE0E0E0" BorderThickness="0,1,0,0">
            <Button x:Name="BackButton" 
                    Content="Назад" 
                    Height="50"
                    FontSize="16"
                    FontFamily="Cascadia Mono"
                    FontWeight="SemiBold"
                    Background="#FF9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BackButton_Click"
                    HorizontalAlignment="Center"
                    Width="150" Margin="0,14,0,-14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF9E9E9E"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF757575"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Page>