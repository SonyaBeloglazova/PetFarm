<Page x:Class="PetFarm.Pages.MedicalDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Медицинские данные">
    <Page.Background>
        <ImageBrush ImageSource="/2pic.jpg"/>
    </Page.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Медицинские данные" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,4,0,16"
                   FontFamily="Cascadia Mono"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Вакцинации -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Добавить вакцинацию:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"
                           FontFamily="Cascadia Mono"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBox x:Name="VaccinationTextBox" 
                             Height="35" 
                             FontSize="14"
                             Padding="12,8"
                             Margin="0,0,0,5"
                             FontFamily="Cascadia Mono"
                             BorderBrush="#FFBDBDBD"
                             BorderThickness="1"/>
                    <Button Content="Добавить вакцинацию" 
                            Height="40"
                            Click="AddVaccination_Click"
                            FontFamily="Cascadia Mono"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="#FF53A1D9"
                            Foreground="White"
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF53A1D9"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF357ABD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <TextBlock Text="Список вакцинаций:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,10,0,5"
                           FontFamily="Cascadia Mono"/>

                <Border Background="White" 
                        BorderBrush="#FFBDBDBD" 
                        BorderThickness="1"
                        Height="150">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="VaccinationsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#FFE0E0E0" 
                                            BorderThickness="0,0,0,1" 
                                            Background="White"
                                            Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding}" 
                                                       FontSize="14"
                                                       FontFamily="Cascadia Mono"
                                                       VerticalAlignment="Center"
                                                       Margin="5,0,0,0"/>

                                            <Button Grid.Column="1" 
                                                    Content="✕" 
                                                    Width="30" 
                                                    Height="30"
                                                    FontSize="14"
                                                    Click="DeleteVaccination_Click"
                                                    Tag="{Binding}"
                                                    Background="#FFEF5350"
                                                    Foreground="White"
                                                    BorderThickness="0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#FFEF5350"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="15"
                                                                            BorderThickness="0">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFD32F2F"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- Визиты к ветеринару -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Добавить визит к ветеринару:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"
                           FontFamily="Cascadia Mono"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBox x:Name="VetVisitTextBox" 
                             Height="35" 
                             FontSize="14"
                             Padding="12,8"
                             Margin="0,0,0,5"
                             FontFamily="Cascadia Mono"
                             BorderBrush="#FFBDBDBD"
                             BorderThickness="1"/>
                    <Button Content="Добавить визит" 
                            Height="40"
                            Click="AddVetVisit_Click"
                            FontFamily="Cascadia Mono"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="#FF53A1D9"
                            Foreground="White"
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF53A1D9"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF357ABD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <TextBlock Text="Список визитов:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,10,0,5"
                           FontFamily="Cascadia Mono"/>

                <Border Background="White" 
                        BorderBrush="#FFBDBDBD" 
                        BorderThickness="1"
                        Height="150">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="VetVisitsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#FFE0E0E0" 
                                            BorderThickness="0,0,0,1" 
                                            Background="White"
                                            Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding}" 
                                                       FontSize="14"
                                                       FontFamily="Cascadia Mono"
                                                       VerticalAlignment="Center"
                                                       Margin="5,0,0,0"/>

                                            <Button Grid.Column="1" 
                                                    Content="✕" 
                                                    Width="30" 
                                                    Height="30"
                                                    FontSize="14"
                                                    Click="DeleteVetVisit_Click"
                                                    Tag="{Binding}"
                                                    Background="#FFEF5350"
                                                    Foreground="White"
                                                    BorderThickness="0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#FFEF5350"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="15"
                                                                            BorderThickness="0">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFD32F2F"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Кнопки  -->
        <Border Grid.Row="2"  Padding="20" BorderBrush="#FFE0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CancelButton" 
                        Grid.Column="0"
                        Content="Назад" 
                        Height="50"
                        Margin="0,0,10,0"
                        FontSize="16"
                        FontFamily="Cascadia Mono"
                        FontWeight="SemiBold"
                        Background="#FF9E9E9E"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BackButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF9E9E9E"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF757575"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="SaveButton" 
                        Grid.Column="1"
                        Content="Сохранить" 
                        Height="50"
                        Margin="10,0,0,0"
                        FontSize="16"
                        FontFamily="Cascadia Mono"
                        FontWeight="SemiBold"
                        Background="#FF53A1D9"
                        Foreground="White"
                        BorderThickness="0"
                        Click="SaveButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4CAF50"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>